<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_vocal_vol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人声音量"
        android:textColor="@color/color_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/sb_vocal_vol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:max="100"
        android:maxHeight="2dp"
        android:progress="50"
        android:progressDrawable="@drawable/progress_bar_bg"
        android:thumb="@drawable/oval"
        app:layout_constraintBottom_toBottomOf="@+id/tv_vocal_vol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_vocal_vol"
        app:layout_constraintTop_toTopOf="@+id/tv_vocal_vol" />

    <TextView
        android:id="@+id/tv_acc_vol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="伴奏音量"
        android:textColor="@color/color_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_vocal_vol" />


    <SeekBar
        android:id="@+id/sb_acc_vol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:maxHeight="2dp"
        android:progress="50"
        android:progressDrawable="@drawable/progress_bar_bg"
        android:thumb="@drawable/oval"
        app:layout_constraintBottom_toBottomOf="@+id/tv_acc_vol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_acc_vol"
        app:layout_constraintTop_toTopOf="@+id/tv_acc_vol" />

    <TextView
        android:id="@+id/tv_pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="伴奏音调"
        android:textColor="@color/color_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_acc_vol" />


    <SeekBar
        android:id="@+id/sb_pitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:maxHeight="2dp"
        android:progress="50"
        android:progressDrawable="@drawable/progress_bar_bg"
        android:thumb="@drawable/oval"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_pitch"
        app:layout_constraintTop_toTopOf="@+id/tv_pitch" />


</androidx.constraintlayout.widget.ConstraintLayout>